#include <optional>
#include <string>
​
using str_t = std::string;
using opt_str_t = std::optional<str_t>;
​
opt_str_t generate_hashtag(const str_t& str) {
  str_t ans = "#";
  int temp= 0;
  for(int i = 0;i<str.length();i++){
    if(i==0){
      if(str[i]!=' ')
      ans += toupper(str[i]);
    }
    else if(str[i]==' '){
      if(str[i+1]!=' ') temp = 1;
  }
  else if(temp == 1){
    ans += toupper(str[i]);
    temp = 0;
  }
    else{
      ans += tolower(str[i]);
    }
    }
    if(ans.length()>= 141 || str=="" || ans == "#")
    return std::nullopt; 
  return ans;
}